@model DA_NH.Models.MenuReview

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa danh sách Đánh giá </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa danh sách đánh giá</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Delete">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên người đánh giá: </label>
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Nội dung đánh giá: </label>
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Chức vụ: </label>
                                    @Html.DisplayFor(model => model.Position)

                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1"></label>
                                    @Html.DisplayFor(model => model.Image)

                                </div>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ProductReviewId" />
                                    <input type="submit" value="Xóa" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </form>
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                    <!-- /.card -->
                    <!-- general form elements -->
                    <!-- /.card -->
