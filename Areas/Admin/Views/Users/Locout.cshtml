                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Khóa tài khoản  </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Locout" method="post" id="user-form" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên tài khoản: </label>
                                    @Html.DisplayFor(model => model.UserName)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email: </label>
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Password: </label>
                                    @Html.DisplayFor(model => model.Password)

                                </div>
                                @* <div class="form-group">
                                <label for="exampleInputEmail1">Mức: </label>
                                @Html.DisplayFor(model => model.Levels)

                                </div>  *@
                                <div class="form-group">
                                    <label for="exampleInputPasswordl">
                                        Hiển thị:
                                        @Html.DisplayFor(model => model.IsActive)
                                    </label>
                                </div>
                              
                                    <input type="hidden" asp-for="UserId" />
                                    <input type="submit" value="Lokout" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                               
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                    <!-- /.card -->
