@using DA_NH.Models;
@using DA_NH.Models.ViewModels;
@using DA_NH.Utilities;

@{
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";

}
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Home")">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Cart</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="javascript:void(0)">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product_remove">Tài khoản đặt</th>
                                        <th class="product-thumbnail">images</th>
                                        <th class="cart-product-name">Product</th>
                                        <th class="product-price">Unit Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product_remove">remove</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.CaretItems.Count > 0)
                                    {
                                        @foreach (var item in Model.CaretItems)
                                        {
                                            <tr>
                                                <td class="product_remove">
                                                    <a style="color:black" href="#">@ViewBag.UserName</a>

                                                </td>
                                                <td class="product-thumbnail">
                                                    <a href="javascript:void(0)">
                                                        <img src="@item.Image" style="width: 100px; height: 100px" alt="Cart Thumbnail">
                                                    </a>
                                                </td>
                                                <td class="product-name"><a href="javascript:void(0)">@item.ProductName</a></td>
                                                <td class="product-price"><span class="amount">$@item.Price</span></td>
                                                <td class="quantity">
                                                    <div class="">
                                                        <a class="btn btn-success btn-sm " asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProductId"> - </a>
                                                        <input class="cart-plus-minus-box" value="@item.Quantity" type="text">
                                                        <a class="btn btn-danger btn-sm " asp-controller="Cart" asp-action="Increase" asp-route-id="@item.ProductId"> + </a>
                                                    </div>
                                                </td>
                                                <td class="product_remove">
                                                    <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId"> Remove</a>
                                                </td>
                                                <td class="product-subtotal"><span class="amount">$@item.Total</span></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6"><h4> giỏ hàng trống !</h4></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Tổng số tiền giỏ hàng </h2>
                                    <ul>
                                        <li>Tổng tiền: $@Model.GranTotal.ToString()</li>
                                    </ul>
                                    <a href="javascript:void(0)">Thanh toán</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</main>