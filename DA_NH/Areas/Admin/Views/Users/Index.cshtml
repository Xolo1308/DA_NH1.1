@model IEnumerable<DA_NH.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý Account</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">


                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"></h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Ho va ten</th>                                       
                                        <th>Tên tài khoản</th>
                                        <th>Email</th>
                                        <th>Mật khẩu </th>
                                         <th>Trạng thái</th> 
                                        <th>Chức năng</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                           
                                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                            
                                            @if(item.LockoutEnd>DateTime.Now&&item.LockoutEnd != null)
                                            {
                                                <td> Khóa </td>
                                            }
                                            else
                                            {
                                                <td> Hoạt động</td>
                                            }

                                            <td>
                                                <a a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Xóa</a>
                                                <a a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Chi tiết </a>
                                                <a a asp-action="Locout" asp-route-id="@item.UserId" class="btn btn-danger">Locout</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>